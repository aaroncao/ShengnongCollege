<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    tools:context="com.education.shengnongcollege.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <com.education.shengnongcollege.view.CustomViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@android:color/white" />
        <com.education.shengnongcollege.view.PagerSlidingTabStrip2
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:pstsIndicatorHeight="0dp"
            app:pstsShouldExpand="false"
            android:background="@color/table_bg"
            android:fillViewport="false" />
    </LinearLayout>

</RelativeLayout>
