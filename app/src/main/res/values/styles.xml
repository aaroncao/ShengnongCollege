<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="video_progressbar_style">
        <item name="android:maxWidth">43.0dip</item>
        <item name="android:maxHeight">43.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/biz_news_detailpage_loading_large_anim
        </item>
        <item name="android:minWidth">43.0dip</item>
        <item name="android:minHeight">43.0dip</item>
    </style>

    <style name="RadiobuttonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="NumberProgressBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#fff</item>
        <item name="progress_reached_color">@color/colorAccent</item>

        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/colorAccent</item>

        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>

    <style name="ConfirmDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">

        <item name="windowMinWidthMinor">90%</item>


        <item name="android:textColorPrimary">#000000</item>

        <item name="colorAccent">#0accac</item>
    </style>

    <style name="DialogFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray4</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="LoadingMoreTextAppearance">
        <item name="android:textColor">@color/c9</item>
        <item name="android:textSize">@dimen/text_size_24px</item>
    </style>
    <style name="textview_style">
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@drawable/shape_wihte_code</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ActionSheetDialog" parent="Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomAnimation</item>
    </style>
    <style name="BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="ImageloadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item><!--对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
